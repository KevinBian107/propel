{
  "hooks": [
    {
      "event": "SessionStart",
      "command": "bash hooks/session-start.sh",
      "description": "Inject Propel context on session start"
    },
    {
      "event": "SessionResume",
      "command": "bash hooks/session-start.sh",
      "description": "Inject Propel context on session resume"
    },
    {
      "event": "PostClear",
      "command": "bash hooks/session-start.sh",
      "description": "Re-inject Propel context after /clear"
    },
    {
      "event": "PostCompact",
      "command": "bash hooks/session-start.sh",
      "description": "Re-inject Propel context after /compact"
    }
  ]
}
